{
  "name": "docker-node-fnm-init",
  "description": "Init controller for docker-node-fnm container.",
  "version": "4.1.0",
  "private": true,
  "license": "MIT",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "repository": "https://github.com/cenk1cenk2/boilerplate-oclif",
  "main": "./dist/index.js",
  "keywords": [
    "cenk1cenk2"
  ],
  "bin": {
    "docker-node-fnm-init": "./bin/run"
  },
  "files": [
    "bin/",
    "config/",
    "dist/"
  ],
  "scripts": {
    "dev": "./bin/dev",
    "start": "./bin/run",
    "build": "tsup-node",
    "dev:start": "tsup-node --watch",
    "dev:build:container": "yarn run build && docker build ../. -t cenk1cenk2/node-fnm:test",
    "clean": "rimraf oclif.manifset.json",
    "lint": "prettier --write src/ --loglevel warn && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "manifest": "oclif manifest",
    "docs:toc": "oclif readme"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "oclif": {
    "bin": "docker-node-fnm-init",
    "dirname": "docker-node-fnm-init",
    "commands": "./dist/commands",
    "plugins": [],
    "hooks": {
      "init": [],
      "command_not_found": "./dist/hooks/not-found.hook"
    },
    "topicSeparator": ":"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@cenk1cenk2/oclif-common": "^4.0.2",
    "@oclif/core": "^1.26.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "execa": "^5.1.1",
    "listr2": "^5.0.8",
    "nunjucks": "^3.2.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.46",
    "@types/node": "^18.15.11",
    "@types/nunjucks": "^3.2.2",
    "@types/uuid": "^8.3.4",
    "eslint": "^8.37.0",
    "globby": "^11.1.0",
    "oclif": "^3.7.3",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "tsconfig-replace-paths": "^0.0.14",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
