{
  "name": "docker-node-fnm-init",
  "description": "An empty cli to start from.",
  "version": "1.0.0",
  "private": true,
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "docker-node-fnm-init": "bin/run.js"
  },
  "repository": "https://github.com/cenk1cenk2/boilerplate-oclif",
  "scripts": {
    "start": "./bin/run.js",
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsconfig-replace-paths --project tsconfig.json",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:build:container": "yarn dev:build && docker build ../. -t cenk1cenk2/node-fnm:test",
    "dev:start": "yarn dev:build && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --write src/ --loglevel warn && eslint --ext .json,.ts,.js --fix src/",
    "lint:check": "eslint --ext .json,.ts,.js src/",
    "lint:staged": "lint-staged",
    "readme": "yarn oclif-dev readme",
    "oclif": "oclif",
    "oclif-dev": "node -r tsconfig-paths/register node_modules/@oclif/dev-cli/bin/run"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "files": [
    "bin/",
    "config/",
    "dist/"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "docker-node-fnm-init",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "hooks": {
      "init": "./dist/hooks/init.hook",
      "command_not_found": "./dist/hooks/not-found.hook",
      "prerun": "./dist/hooks/prerun.hook"
    }
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "oclif",
    "cenk1cenk2"
  ],
  "license": "MIT",
  "dependencies": {
    "@cenk1cenk2/boilerplate-oclif": "1.10.5",
    "@oclif/command": "^1.8.3",
    "@oclif/config": "^1.17.1",
    "@oclif/errors": "^1.3.5",
    "@oclif/plugin-help": "^3.2.5",
    "class-transformer": "^0.4.0",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.13.1",
    "config": "^3.3.6",
    "dotenv": "^10.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "globby": "^11.0.4",
    "js-yaml": "^4.1.0",
    "listr2": "^3.13.4",
    "nunjucks": "^3.2.3",
    "object-path": "^0.11.8",
    "reflect-metadata": "^0.1.13",
    "through": "^2.3.8",
    "tslib": "^2.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.4.11",
    "@cenk1cenk2/eslint-config": "^1.0.9",
    "@oclif/dev-cli": "^1.26.0",
    "@types/config": "^0.0.40",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.6",
    "@types/nunjucks": "^3.2.0",
    "@types/object-path": "^0.11.1",
    "@types/through": "^0.0.30",
    "@types/uuid": "^8.3.3",
    "enquirer": "^2.3.6",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-replace-paths": "^0.0.11",
    "typescript": "^4.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
