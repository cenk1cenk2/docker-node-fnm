{
  "extends": "../tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@commands/*": ["commands/*"],
      "@helpers/*": ["helpers/*"],
      "@constants/*": ["constants/*"],
      "@interfaces/*": ["interfaces/*"],
      "@context/*": ["interfaces/commands/*"],
      "@templates/*": ["templates/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "files": ["./types/config.d.ts"]
}
