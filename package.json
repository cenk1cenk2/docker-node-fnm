    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "ts-node": "^10.9.2",
    "tsconfig-replace-paths": "^0.0.14",
    "tsup": "^8.4.0",
    "turbo": "^1.13.4",
    "typescript": "^5.8.2"
