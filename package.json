{
  "name": "root",
  "private": true,
  "repository": "https://github.com/cenk1cenk2/docker-node-fnm",
  "scripts": {
    "ls": "lerna la",
    "clean": "lerna clean -y && rimraf node_modules yarn.lock",
    "exec": "lerna exec --stream",
    "command": "lerna run --stream",
    "lint": "yarn run command --concurrency 1 lint",
    "lint:check": "yarn run command lint:check",
    "build": "yarn command build --include-dependencies"
  },
  "workspaces": [
    "supervisor/"
  ],
  "simple-git-hooks": {
    "pre-commit": "yarn command --concurrency 1 lint:staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.5.5",
    "@cenk1cenk2/eslint-config": "^2.5.39",
    "@swc/core": "^1.3.21",
    "commitizen": "^4.2.6",
    "eslint": "^8.29.0",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "nx": "15.3.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1",
    "tsconfig-replace-paths": "^0.0.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
