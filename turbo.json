{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "templates/**", "bin/**"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["lint"],
      "inputs": ["src/**"]
    },
    "format": {
      "dependsOn": ["format"],
      "inputs": ["src/**"]
    }
  }
}
